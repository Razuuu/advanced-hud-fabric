{
    "schemaVersion": 1,
    "id": "advancedhud",
    "version": "${version}",
    "name": "Advanced-HUD",
    "description": "This mod shows a HUD (FPS, Coordinates and Ping) on screen.",
    "authors": [
        "Razuuu"
    ],
    "contact": {
        "homepage": "https://www.razuuu.de",
        "sources": "https://github.com/Razuuu/advanced-hud-fabric",
        "issues": "https://github.com/Razuuu/advanced-hud-fabric/issues"
    },
    "license": "LGPL-3.0",
    "icon": "assets/advancedhud/icon.png",
    "environment": "client",
    "entrypoints": {
        "client": [
            "de.razuuu.fabric.advancedhud.AdvancedHudMod"
        ],
        "modmenu": [
            "de.razuuu.fabric.advancedhud.config.ModMenuIntegration"
        ]
    },
    "mixins": [
        "advancedhud.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.14.22",
        "minecraft": ">=1.20.2",
        "fabric-key-binding-api-v1": "*",
        "fabric-lifecycle-events-v1": "*"
    }
}
